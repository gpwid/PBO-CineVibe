<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<VBox fx:id="rootVBox" alignment="TOP_CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20"
      fx:controller="com.example.demo.HelloController"
      prefHeight="800.0" prefWidth="1200.0">
    <stylesheets>
        <String fx:value="/com/example/demo/styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="appTitle" text="CineVibe Recommender" />

    <Label text="Masukkan 1 nama artis untuk menemukan film yang cocok:" />

    <TextField fx:id="searchField" promptText="Contoh: Radiohead" maxWidth="400.0" />

    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="recommendButton" text="Cari Rekomendasi" onAction="#onRecommendClick" />
        <ComboBox fx:id="genreFilterDropdown" promptText="Filter berdasarkan Genre..." prefWidth="220.0" />
    </HBox>

    <Label fx:id="loadingLabel" text="Mencari..." visible="false" />
    <Label fx:id="recommendationLabel" text="Hasil Rekomendasi:" visible="false" />

    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="scroll-pane">
        <content>
            <TilePane fx:id="resultTilePane" hgap="15.0" vgap="15.0" styleClass="tile-pane" />
        </content>
    </ScrollPane>

</VBox>